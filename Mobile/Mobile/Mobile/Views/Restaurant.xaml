<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mobile.Views.Restaurant"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:custom="clr-namespace:Mobile.CustomControls"
    Shell.NavBarIsVisible="False"
    mc:Ignorable="d">
    <ContentPage.Content>


        <ScrollView>
            <StackLayout BackgroundColor="{d:StaticResource BackgroundBlueLight}" HorizontalOptions="Fill">
                  
                <Frame BackgroundColor="White" CornerRadius="40" Margin="0,-40,0,0">
                      
                    <StackLayout >
                                                              
                                <Frame 
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,40,0,10"
                                    Padding="0"
                                    BackgroundColor="Red"
                                    CornerRadius="20"
                                    HasShadow="True"
                                    IsClippedToBounds="True">
                                    <Image
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Aspect="AspectFill"
                                        HeightRequest="150"
                                        HorizontalOptions="FillAndExpand"
                                        Source="{Binding Restaurant.ImageFullURL}"
                                        VerticalOptions="FillAndExpand" />
                                </Frame>


                                <custom:RatingBar
                                    x:Name="RatingControl"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    IsReadOnly="True"
                                    HeightRequest="25"
                                    Rating="{Binding Restaurant.Rating}" />

                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                     Margin="0,10,0,0"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Restaurant.Name}"
                                    TextColor="{StaticResource BackgroundText}"
                                    VerticalOptions="Center" />



                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    FontSize="16"
                                    Margin="0,10,0,0"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Restaurant.Description }"
                                    TextColor="{StaticResource BackgroundTextBlueDark}"
                                    VerticalOptions="Center" />

                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    FontSize="16"
                                    Margin="0,10,0,0"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Restaurant.Address }"
                                    TextColor="Gray"
                                    VerticalOptions="Center" />

                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    FontSize="16"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Restaurant.PhoneNumber }"
                                    TextColor="Gray"
                                    VerticalOptions="Center" />


                    </StackLayout>
                </Frame>
                
                
                <ContentView
                    x:Name="ContainerSecondPart"
                    BackgroundColor="White"
                    HeightRequest="350"
                    IsVisible="False">
                    
                    <StackLayout>



                        <StackLayout x:Name="ListReviews">
                            <CollectionView
                                    x:Name="ListadoTop"
                                    Margin="0,10,0,0"
                                    BackgroundColor="White"
                                    HeightRequest="220"
                                    SelectionMode="Single">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout
                                                x:Name="ContainerElement"
                                                Margin="0,0,0,10"
                                                BackgroundColor="white"
                                                Orientation="Vertical">

                                            <Grid ColumnSpacing="0" RowSpacing="0">

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="0.1*" />
                                                    <RowDefinition Height="0.1*" />
                                                    <RowDefinition Height="0.1*" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.3*" />
                                                    <ColumnDefinition Width="0.4*" />
                                                    <ColumnDefinition Width="0.2*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="0.7*" />
                                                </Grid.ColumnDefinitions>
                                                <Label
                                                        Grid.Row="1"
                                                        Grid.Column="3"
                                                        Grid.ColumnSpan="2"
                                                        FontAttributes="Bold"
                                                        FontSize="17"
                                                        LineBreakMode="WordWrap"
                                                        Text="{Binding Description}"
                                                        TextColor="Black" />


                                                <Label
                                                        Grid.Row="2"
                                                        Grid.Column="3"
                                                        Grid.ColumnSpan="2"
                                                        Text="{Binding Name}"
                                                        VerticalTextAlignment="Center" />


                                                <custom:RatingBar
                                                        Grid.Row="0"
                                                        Grid.Column="3"
                                                        Margin="0,17,0,0"
                                                        HeightRequest="15"
                                                        HorizontalOptions="Start"
                                                        IsReadOnly="True"
                                                        Rating="{Binding Rating}"
                                                        VerticalOptions="Center"
                                                        WidthRequest="100" />

                                                <Image
                                                        x:Name="ImagenPlay"
                                                        Grid.Row="0"
                                                        Grid.RowSpan="3"
                                                        Grid.Column="0"
                                                        Grid.ColumnSpan="2"
                                                        Margin="10,10,0,0"
                                                        Source="{Binding ImgPlay}"
                                                        VerticalOptions="FillAndExpand" />
                                            </Grid>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>


                    </StackLayout>
                </ContentView>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>


























